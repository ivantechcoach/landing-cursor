{
  "name": "personal-branding-portfolio",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "setup-port": "node scripts/setup-port.js",
    "detect-port": "node scripts/detect-running-port.js",
    "clean": "node scripts/clean-restart.js",
    "dev": "npm run setup-port && next dev --port 3000",
    "dev:open": "npm run setup-port && concurrently --kill-others-on-fail \"next dev --port 3000\" \"powershell -Command Start-Sleep 5; Start-Process http://localhost:3000\"",
    "dev:clean": "npm run clean && npm run setup-port && next dev --port 3000 --no-lint",
    "dev:auto": "npm run detect-port && next dev --port 3000",
    "dev:fresh": "npm run clean && npm run setup-port && next dev --port 3000",
    "build": "npm run setup-port && next build",
    "build:clean": "npm run clean && npm run setup-port && next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "next": "14.2.5",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "@types/node": "^20.14.9",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "autoprefixer": "^10.4.19",
    "eslint": "^8.57.0",
    "eslint-config-next": "14.2.5",
    "playwright": "^1.56.0",
    "postcss": "^8.4.39",
    "puppeteer": "^24.23.0",
    "tailwindcss": "^3.4.4",
    "typescript": "^5.5.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
